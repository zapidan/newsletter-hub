{
  "name": "newsletter-hub",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.provider=v8",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --reporter=verbose --reporter=junit --outputFile=test-results/junit.xml --coverage.provider=v8",
    "test:integration": "vitest run --reporter=junit --outputFile=test-results/junit-integration.xml src/__tests__/integration/newsletter-workflow.integration.test.tsx --coverage.provider=v8",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "node scripts/run-tests.js all",
    "test:fast": "npm run test:unit && npm run test:integration",
    "test:ci": "vitest run --coverage --coverage.provider=v8 --reporter=junit --outputFile=test-results/junit.xml",
    "test:watch:unit": "vitest --watch src/**/*.{test,spec}.{js,ts,jsx,tsx}",
    "test:watch:integration": "vitest --watch src/**/*.integration.{test,spec}.{js,ts,jsx,tsx}",
    "test:debug": "vitest --inspect-brk --no-coverage",
    "test:smoke": "vitest run --reporter=junit --outputFile=test-results/junit-smoke.xml src/__tests__/smoke",
    "logs:scan": "node scripts/find-console-logs.js",
    "logs:report": "node scripts/find-console-logs.js --json",
    "logs:dev": "VITE_LOG_LEVEL=DEBUG npm run dev",
    "logs:prod": "VITE_LOG_LEVEL=WARN npm run dev"
  },
  "resolutions": {
    "@types/react": "18.3.23",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.80.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.344.0",
    "node-html-parser": "^7.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.53.0",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "chalk": "5.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.0.0",
    "msw": "^2.10.2",
    "playwright": "^1.53.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4"
  }
}
