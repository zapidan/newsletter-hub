{
  "name": "newsletter-hub",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "npx vitest",
    "test:ui": "npx vitest --ui",
    "test:run": "npx vitest run",
    "test:coverage": "npx vitest run --coverage --coverage.provider=v8",
    "test:watch": "npx vitest --watch",
    "test:unit": "npx vitest run --reporter=verbose --reporter=junit --outputFile=test-results/junit.xml --coverage.provider=v8",
    "test:integration": "npx vitest run --reporter=junit --outputFile=test-results/junit-integration.xml src/__tests__/integration/newsletter-workflow.integration.test.tsx --coverage.provider=v8",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "node --max-old-space-size=4096 scripts/run-tests.js all",
    "test:fast": "npm run test:unit && npm run test:integration",
    "test:ci": "npx vitest run --coverage --coverage.provider=v8 --reporter=junit --outputFile.junit=test-results/junit.xml",
    "test:ci:update": "npx vitest run --coverage --coverage.provider=v8 --reporter=junit --outputFile.junit=test-results/junit.xml -u",
    "test:watch:unit": "npx vitest --watch src/**/*.{test,spec}.{js,ts,jsx,tsx}",
    "test:watch:integration": "npx vitest --watch src/**/*.integration.{test,spec}.{js,ts,jsx,tsx}",
    "test:debug": "npx vitest --inspect-brk --no-coverage",
    "test:smoke": "npx vitest run --reporter=junit --outputFile=test-results/junit-smoke.xml src/__tests__/smoke",
    "test:junit-setup": "node scripts/test-junit-reporter.js",
    "test:coverage:html": "npx vitest run --coverage --coverage.provider=v8 --reporter=html",
    "test:coverage:open": "open html/index.html || xdg-open html/index.html || start html/index.html",
    "test:coverage:full": "npm run test:coverage:html && npm run test:coverage:open",
    "test:results:parse": "node scripts/parse-junit-results.js",
    "test:results:open": "open test-results/test-results.html || xdg-open test-results/test-results.html || start test-results/test-results.html",
    "test:results:simple": "node scripts/generate-simple-test-table.js",
    "test:results:simple:open": "open test-results/simple-test-table.html || xdg-open test-results/simple-test-table.html || start test-results/simple-test-table.html",
    "test:coverage:parse": "node scripts/generate-coverage-report.js",
    "test:dashboard": "node scripts/generate-test-dashboard.js",
    "test:dashboard:open": "open test-dashboard/index.html || xdg-open test-dashboard/index.html || start test-dashboard/index.html",
    "test:full": "npm run test:coverage:html && npm run test:dashboard && npm run test:dashboard:open",
    "test:no-thresholds": "node --max-old-space-size=4096 --expose-gc node_modules/.bin/vitest run --coverage --coverage.provider=v8 --coverage.threshold.autoUpdate",
    "logs:scan": "node scripts/find-console-logs.js",
    "logs:report": "node scripts/find-console-logs.js --json",
    "logs:dev": "VITE_LOG_LEVEL=DEBUG npm run dev",
    "logs:prod": "VITE_LOG_LEVEL=WARN npm run dev"
  },
  "resolutions": {
    "@types/react": "18.3.23",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.80.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.344.0",
    "node-html-parser": "^7.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.2",
    "react-toastify": "^11.0.5",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.53.1",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "chalk": "5.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.0.0",
    "msw": "^2.10.2",
    "playwright": "^1.53.1",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4"
  }
}