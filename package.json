{
  "name": "newsletter-hub",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project=chromium-mobile",
    "test:e2e:tablet": "playwright test --project=chromium-tablet",
    "test:e2e:desktop": "playwright test --project=chromium-desktop",
    "test:e2e:responsive": "playwright test tests/e2e/responsive/",
    "test:e2e:performance": "playwright test tests/e2e/performance/",
    "test:e2e:visual": "playwright test tests/e2e/visual/",
    "test:e2e:responsive:with-dev": "./scripts/run-responsive-tests.sh",
    "test:e2e:all-viewports": "playwright test --project=chromium-mobile --project=chromium-tablet --project=chromium-desktop",
    "test:mobile": "cd mobile-app && npm test",
    "test:mobile:watch": "cd mobile-app && npm test -- --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 1000 --config eslint.ci.config.js",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'Husky not available, skipping git hooks setup'",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' npx vitest run --coverage --coverage.provider=v8 --reporter=junit --reporter=html --outputFile.junit=test-results/junit.xml",
    "test:coverage:html": "npx vitest run --coverage --coverage.provider=v8 --reporter=html",
    "test:coverage:open": "open html/index.html || xdg-open html/index.html || start html/index.html",
    "test:results:parse": "node scripts/parse-junit-results.js",
    "test:results:simple": "node scripts/generate-simple-test-table.js",
    "test:coverage:parse": "node scripts/generate-coverage-report.js",
    "test:dashboard": "node scripts/generate-test-dashboard.js",
    "test:dashboard:open": "open test-dashboard/index.html || xdg-open test-dashboard/index.html || start test-dashboard/index.html",
    "logs:scan": "node scripts/find-console-logs.js",
    "logs:report": "node scripts/find-console-logs.js --json",
    "logs:dev": "VITE_LOG_LEVEL=DEBUG npm run dev",
    "logs:prod": "VITE_LOG_LEVEL=WARN npm run dev",
    "postbuild": "cp dist/index.html dist/404.html",
    "kill-dev-server": "./scripts/kill-dev-server.sh"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.1"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.80.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.344.0",
    "node-html-parser": "^7.0.1",
    "playwright": "^1.58.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.13.0",
    "react-toastify": "^11.0.5",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "uuid": "^11.1.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.58.0",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "chalk": "5.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^6.0.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "happy-dom": "^20.3.7",
    "jsdom": "^24.0.0",
    "msw": "^2.10.2",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^6.4.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4"
  }
}
